

<h2><%= @post.title %></h2>
<h4><%= "Posted on " + @post.created_at.strftime("%B %d, %Y") %></h4>

<p><%= @post.text %></p>


<div class="btn-group">
  <%= link_to "Back", posts_path, :class => "btn btn-primary" %>
</div>

<div class="btn-group">
  <%= link_to "Edit Post", edit_post_path, :class => "btn btn-primary" %>
</div>

<div class="btn-group">
  <%= link_to "Delete Post", post_path, :class => "btn btn-primary",
  :data => {:confirm => "Do you really want this?",
            :method => "delete"} %>
</div>